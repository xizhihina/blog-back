<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.mapper.MyInfoMapper">
    <update id="update">
        update my_info set user_name=#{userName}, skill=#{skill}, article_count=#{articleCount} where id=1
    </update>
    <select id="select" resultType="com.blog.pojo.MyInfo">
        select * from my_info
    </select>
</mapper>